{
  "name": "copia-paginas",
  "description": "Clone page structure exactly. Only content changes allowed. Validates with structural diffs. Reports PASS/FAIL with exact line differences.",
  "version": "2.0.0",
  "author": "Claude",
  "triggers": [
    "/copia-paginas",
    "/copiar-pagina", 
    "/sync-pages",
    "/clone-page"
  ],
  "parameters": {
    "source_path": {
      "type": "string",
      "description": "Ruta de la página fuente (plantilla)",
      "required": true
    },
    "target_path": {
      "type": "string",
      "description": "Ruta de la página destino",
      "required": true
    },
    "content_allowlist": {
      "type": "array",
      "description": "Lista de campos que pueden cambiar",
      "default": ["title", "h1", "p", "href", "src", "tel:", "wa.me/"]
    },
    "tracking_allowlist": {
      "type": "array",
      "description": "IDs de tracking permitidos (GTM/GA/Clarity)",
      "default": []
    }
  },
  "validation": {
    "html_structure": true,
    "css_rules": true,
    "script_order": true
  },
  "output_format": "PASS/FAIL with line-by-line diff",
  "tags": ["html", "css", "sync", "structure", "validation", "diff"],
  "category": "development"
}
