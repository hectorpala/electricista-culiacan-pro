RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirects 301 - Migración de estructura de carpetas
# Fecha: 2025-11-22
# Razón: Unificación de estructura plana en /servicios/

# Redirect de landing pages locales (antiguas rutas → nuevas rutas)
Redirect 301 /servicios/electricista/24-7/ https://electricistaculiacanpro.mx/servicios/emergencia-24-7/
Redirect 301 /servicios/electricista/cerca-de-mi/ https://electricistaculiacanpro.mx/servicios/electricista-cerca-de-mi/
Redirect 301 /servicios/electricista/a-domicilio/ https://electricistaculiacanpro.mx/servicios/electricista-a-domicilio/
Redirect 301 /servicios/electricista/colonias/ https://electricistaculiacanpro.mx/servicios/electricista-colonias-culiacan/
Redirect 301 /servicios/electricista/precios/ https://electricistaculiacanpro.mx/servicios/electricista-precios/

# ============================================
# CACHE HEADERS - Performance Optimization
# ============================================

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# Cache Control Headers
<IfModule mod_expires.c>
    ExpiresActive On

    # Images - 1 year
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fonts - 1 year
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # CSS/JS - 1 month
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # HTML - 1 day
    ExpiresByType text/html "access plus 1 day"

    # Default
    ExpiresDefault "access plus 1 week"
</IfModule>

# Additional Cache-Control headers
<IfModule mod_headers.c>
    # Static assets - immutable
    <FilesMatch "\.(webp|png|jpg|jpeg|gif|ico|woff2|woff)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # CSS/JS
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # HTML
    <FilesMatch "\.html$">
        Header set Cache-Control "public, max-age=86400, must-revalidate"
    </FilesMatch>

    # Security headers
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
